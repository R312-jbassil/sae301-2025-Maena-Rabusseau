---
import Layout from "../layouts/Layout.astro";
import Lunettesoleil from "../assets/lunettesoleil.avif";
const title = "Connexion";
---

<Layout title={title}>
    <main class="min-h-[70vh] flex items-center justify-center bg-white">
        <div class="w-full max-w-6xl mx-auto">
            <div class="bg-white shadow-md rounded-lg overflow-hidden grid grid-cols-1 md:grid-cols-2">
                <!-- Left: image (hidden on small screens) -->
                <div class="hidden md:block">
                    <div class="h-full w-full">
                        <img src={Lunettesoleil.src} alt="visuel" class="w-full h-full object-cover" />
                        <div class="absolute md:relative"></div>
                    </div>
                </div>

                <!-- Right: form -->
                <div class="p-8 md:p-12 flex items-center">
                    <div class="w-full">
                        <a href="/" class="text-sm text-neutral-500 hover:underline">← Retour</a>
                        <h1 class="mt-6 text-2xl md:text-3xl font-bold text-neutral-900">CONNEXION</h1>
                        <p class="mt-2 text-sm text-neutral-500">Accédez à votre espace personnel TaVue</p>

                        <form class="mt-8 space-y-6" action="#" method="POST">
                            <div>
                                <label for="email" class="block text-sm font-medium text-neutral-600">E-mail</label>
                                <div class="mt-2">
                                    <input id="email" name="email" type="email" required placeholder="vous@exemple.com" class="block w-full rounded border border-neutral-200 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-(--color-accent)" />
                                </div>
                            </div>

                            <div>
                                <label for="password" class="block text-sm font-medium text-neutral-600">Mot de passe</label>
                                <div class="mt-2">
                                    <input id="password" name="password" type="password" required placeholder="••••••••" class="block w-full rounded border border-neutral-200 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-(--color-accent)" />
                                </div>
                            </div>

                            <div class="flex items-center justify-between">
                                <label class="inline-flex items-center text-sm text-neutral-600">
                                    <input type="checkbox" class="h-4 w-4 text-(--color-accent) border-neutral-300 rounded" />
                                    <span class="ml-2">Se souvenir de moi</span>
                                </label>
                                <a href="/forgot" class="text-sm text-neutral-500 hover:underline">Mot de passe oublié ?</a>
                            </div>

                            <div>
                                <button type="submit" class="w-full inline-flex justify-center rounded bg-(--color-accent) px-4 py-2 text-white font-medium hover:brightness-95">SE CONNECTER</button>
                            </div>
                        </form>

                        <div class="mt-6 text-center text-sm text-neutral-500">
                            Pas encore de compte ? <a href="/signup" class="text-(--color-accent) font-medium hover:underline">Créer un compte</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</Layout>